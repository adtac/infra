#!/usr/bin/env bash

refresh_status=false
if [[ "$1" == "-r" ]]; then
  refresh_status=true
  shift
fi

if [[ "$1" == "volume" ]]; then
  idx=$(pacmd list-sinks \
    | awk '/.*priority:|index:|state:/{print $NF}' \
    | paste -d " " - - - \
    | grep -P "(RUNNING|IDLE)" \
    | sort -k3rn -k1n \
    | head -n 1 \
    | awk '{print $1}')
  if [[ "$2" == "get" ]]; then
    pacmd list-sinks \
      | awk '/.*index: '$idx'/,/volume:/' \
      | tail -n 1 \
      | grep -o '[0-9]*%' \
      | head -n 1  # left and right should have the same volume, hopefully
  elif [[ "$2" == "is-muted" ]]; then
    pacmd list-sinks \
      | awk '/.*index: '$idx'/,/muted:/' \
      | tail -n 1 \
      | awk '{print $2}'
    pactl list sinks | awk '/RUNNING|IDLE/,/Mute/' | grep Mute | tail -n 1 | awk '{ print $2 }'
  elif [[ "$2" == "set" ]]; then
    pactl set-sink-volume $idx $3%
  elif [[ "$2" == "inc" ]]; then
    pactl set-sink-volume $idx +$3%
  elif [[ "$2" == "dec" ]]; then
    pactl set-sink-volume $idx -$3%
  fi
fi

if [[ "$1" == "mute" ]]; then
  if [[ "$2" == "get" ]]; then
    pactl list sinks | grep Mute | tail -n 1 | awk '{ print $2 }'
  elif [[ "$2" == "set" ]]; then
    if [[ "$3" == "yes" ]]; then
      cmd=true
    elif [[ "$3" == "no" ]]; then
      cmd=false
    elif [[ "$3" == "toggle" ]]; then
      cmd=toggle
    fi
    pactl set-sink-mute $(pacmd list-sinks |awk '/* index:/{print $3}') $cmd
  fi
fi

if [[ "$1" == "brightness" ]]; then
  if [[ "$2" == "get" ]]; then
    echo $(light -G) | awk '{printf "%d%%", int($1+0.5)}'
  elif [[ "$2" == "set" ]]; then
    light -S $3
  elif [[ "$2" == "inc" ]]; then
    light -A $3
  elif [[ "$2" == "dec" ]]; then
    light -U $3
  fi
fi

if [[ "$1" == "temperature" ]]; then
  if [[ "$2" == "get" ]]; then
    sensors | grep Package | awk '{ print $4 }' | cut -d '+' -f 2
  fi
fi

if [[ "$1" == "memory" ]]; then
  if [[ "$2" == "get" ]]; then
    free -m | grep Mem | awk '{ printf "%.1fG", $3 / 1024.0 }'
  fi
fi

if [[ "$refresh_status" == "true" ]]; then
  kill -USR1 $(pidof i3status)
fi
